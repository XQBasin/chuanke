.content {
  display: flex;
  flex-direction: column;
}
.row-column {
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.row-column:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.row-column .label {
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.row-column .content {
  width: 70%;
  height: 40px;
}
.des {
  text-align: right;
  color: #007BFF;
}
.textarea {
  background-color: #FFFFFF;
  padding: 10px;
  margin: 5px 0px;
}
.view-text {
  width: 100%;
  padding: 5px;
  word-break: break-all;
}
.title-column {
  margin: 5px 0px;
  height: 40px;
}
.title-column .des {
  color: #007BFF;
}
.yewu-column {
  background-color: #FFFFFF;
}
.groupsources {
  padding: 2px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: #FFFFFF;
}
.groupsources:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.groupsources button {
  width: 100%;
  height: 44px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.groupsources button text {
  font-size: 18px;
  font-weight: 600;
}
.groupsources .button-style-huodong {
  background-color: #007BFF;
  color: #FFFFFF;
}
.groupsources .button-style-huodong::after {
  border: none;
}
.share-switch {
  padding: 10px;
  margin-top: 10px;
  flex-direction: row;
  justify-content: space-between;
  height: 40px;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-switch .label {
  width: 85%;
  margin: 0px 5px;
  display: flex;
  align-items: center;
}
.share-switch .des {
  width: 15%;
  color: #007BFF;
  display: flex;
  justify-content: center;
}
.wx-switch-input {
  width: 42px !important;
  height: 20px !important;
}
.wx-switch-input::before {
  width: 41px !important;
  height: 20px !important;
}
.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}
