.pl_item {
  display: flex;
  flex-direction: column;
  margin: 0 10px;
  position: relative;
  padding: 5px;
}
.pl_item:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-bottom-width: 1px;
}
