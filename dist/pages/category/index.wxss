.head {
  width: 100%;
  background: #fff;
  display: flex;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 10rpx #EFEFEF;
  position: fixed;
  z-index: 1;
  padding: 0 20rpx;
}
.head .block {
  position: relative;
  margin: 0 20rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: center;
}
.head .block .text {
  font-size: 30rpx;
  color: #999999;
}
.head .block .active {
  font-weight: bold;
  font-size: 36rpx;
  color: #222222;
}
.head .block .line {
  width: 100%;
  height: 7rpx;
  border-radius: 10rpx 10rpx 0 0;
  background: #007BFF;
  position: absolute;
  bottom: 0;
}
.content {
  padding: 0 10px;
  margin-top: 100rpx;
}
.content .block {
  margin-bottom: 20rpx;
}
.content .block .first {
  font-size: 32rpx;
  font-weight: bold;
}
.content .block .second {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.content .block .second .item {
  width: 30%;
  height: 100rpx;
  box-shadow: 0 0 2rpx #CCCCCC;
  border: 1px solid #EFEFEF;
  margin: 20rpx 0;
  background: #fff;
  border-radius: 10rpx;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
