.content {
  width: 100%;
  border-radius: 40rpx 40rpx 0 0;
  background: #fff;
  margin-top: -45rpx;
  padding: 60rpx 40rpx 90rpx;
}
.content .user-info {
  display: flex;
  align-items: center;
}
.content .user-info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-block;
}
.content .user-info text {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.content .title {
  margin: 20rpx 0 20rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.content .price {
  font-size: 30rpx;
  color: #007BFF;
}
.content .info {
  justify-content: space-between;
  padding: 30rpx 0 10rpx;
  border-bottom: 1px solid #EFEFEF;
  display: flex;
  align-items: center;
}
.content .info .show text {
  margin-right: 40rpx;
  color: #c7c7c7;
  font-size: 24rpx;
}
.content .info .time {
  font-size: 24rpx;
  color: #999999;
}
.content .catalog {
  padding: 20rpx 0 0;
}
.content .other {
  margin-top: 40rpx;
}
.content .other .name {
  font-size: 30rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.content .other .item {
  width: 300rpx;
  height: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
  position: relative;
}
.content .other .item image {
  border-radius: 10rpx;
}
.content .other .item .text {
  position: absolute;
  bottom: 0;
  width: 100%;
  font-weight: normal;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 0 8rpx;
  color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content .comment {
  margin-top: 40rpx;
}
.content .comment .name {
  font-size: 30rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #EFEFEF;
}
.content .comment .pl_item {
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 5px;
}
.content .comment .pl_item:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-bottom-width: 1px;
}
.content .comment .pl_item .pl_flex_wrp {
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 5px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .comment .pl_item .pl_flex_wrp .pl_left {
  width: 20%;
  height: 45px;
}
.content .comment .pl_item .pl_flex_wrp .pl_left image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.content .comment .pl_item .pl_flex_wrp .pl_right {
  width: 80%;
  display: flex;
  flex-direction: column;
}
.content .comment .pl_item .pl_flex_wrp .pl_right .pl_title {
  text-align: left;
}
.content .comment .pl_item .pl_flex_wrp .pl_right .pl_description {
  color: #848484;
  margin-top: 5px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
}
.content .comment .pl_item .pl_flex_wrp .pl_right .pl_description .pl_des_left {
  width: 30%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content .comment .pl_item .pl_flex_wrp .pl_right .pl_description .pl_des_center {
  text-align: center;
  width: 50%;
}
.content .comment .pl_item .pl_flex_wrp .pl_right .pl_description .pl_des_right {
  text-align: right;
  width: 20%;
  color: #007BFF;
}
