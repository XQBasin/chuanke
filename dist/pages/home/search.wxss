.search {
  width: 90%;
  height: 28px;
  border-radius: 30px;
  padding: 2px 10px;
  position: absolute;
  /* 初始化为相对定位 滑动时改为绝对定位fixed*/
  top: 78px;
  left: 0;
  right: 0;
  /* 决定了搜索框置顶 */
  opacity: 0.6;
  /* 搜索框半透明效果 */
  z-index: 2;
  background-color: #FFFFFF;
  margin: auto;
  border: 1px solid #EFEFEF;
  display: flex;
  align-items: center;
}
.search input {
  width: 100%;
  padding: 2px 5px;
  margin: 2px;
  font-size: 13px;
}
.history {
  margin-top: 50px;
  padding: 0 40rpx;
}
.history .title {
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 10rpx;
}
.tab-panel-item {
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.tab-panel-item .item_list {
  width: 100%;
  height: 42px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tab-panel-item .item_list:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #EFEFEF solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-bottom-width: 1px;
}
.tab-panel-item .item_list .item_left {
  width: 8%;
  display: flex;
  align-items: center;
  height: 21px;
}
.tab-panel-item .item_list .item_left image {
  width: 21px;
  height: 21px;
}
.tab-panel-item .item_list .item_center {
  width: 84%;
  display: flex;
  align-items: center;
  height: 21px;
  text-align: left;
}
.tab-panel-item .item_list .item_right {
  width: 8%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 21px;
}
