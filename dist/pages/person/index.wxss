.head {
  padding: 20rpx 40rpx 100rpx;
  background: #007BFF;
  color: #fff;
}
.head .top {
  display: flex;
  justify-content: space-between;
}
.head .top .left .name {
  font-size: 42rpx;
}
.head .top .left .sign {
  font-size: 24rpx;
}
.head .top .right image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.head .bottom {
  width: 100%;
  display: flex;
  margin-top: 40rpx;
}
.head .bottom .block {
  font-size: 24rpx;
  width: 25%;
  box-sizing: border-box;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
}
.head .bottom .block view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.head .bottom .none {
  border: none;
}
.tab-panel-item {
  position: relative;
  top: -60rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  margin: 5px;
}
.tab-panel-item .item_list {
  width: 90%;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  height: 42px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tab-panel-item .item_list:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ECECEC solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-bottom-width: 1px;
}
.tab-panel-item .item_list .item_left {
  width: 12%;
  display: flex;
  align-items: center;
  height: 21px;
}
.tab-panel-item .item_list .item_left image {
  width: 21px;
  height: 21px;
}
.tab-panel-item .item_list .item_center {
  width: 80%;
  display: flex;
  align-items: center;
  height: 21px;
  text-align: left;
}
.tab-panel-item .item_list .item_right {
  width: 8%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 21px;
}
