.content {
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  padding: 20px 10px;
}
.content .icon {
  width: 100px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .des {
  margin-top: 20px;
}
.content .image {
  margin-top: 20px;
  width: 144rpx;
  height: 16rpx;
}
.content .image image {
  width: 144rpx;
  height: 16rpx;
}
.btn {
  padding: 2px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: #FFFFFF;
}
.btn:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.btn .button-style-huodong {
  width: 100%;
  margin: 10px;
  padding: 5px;
  background-color: #007BFF;
  color: #FFFFFF;
}
.btn .button-style-huodong::after {
  border: none;
}
