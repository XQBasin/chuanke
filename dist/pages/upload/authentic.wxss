.row-column-group {
  display: flex;
  flex-direction: column;
}
.row-column-group .row-column {
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.row-column-group .row-column:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.row-column-group .row-column .label {
  width: 24%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.row-column-group .row-column .content {
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  width: 76%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.row-column-group .row-column .content .placep {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  width: 100%;
}
.row-column-group .image-group {
  margin-top: 5px;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.row-column-group .image-group .imagedes {
  margin: 10px;
}
.row-column-group .image-group .image_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  margin-top: 5px;
}
.row-column-group .image-group .image_btn::after {
  border: none;
}
.row-column-group .image-group .image {
  width: 525rpx;
  height: 334rpx;
}
.row-column-group .image-group .image image {
  width: 525rpx;
  height: 334rpx;
}
.row-column-group .image-group .button-style-huodong {
  margin: 10px;
  padding: 5px;
  background-color: #007BFF;
  color: #FFFFFF;
}
.row-column-group .image-group .button-style-huodong::after {
  border: none;
}
.btn {
  padding: 2px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: #FFFFFF;
}
.btn:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.btn .button-style-huodong {
  width: 100%;
  margin: 10px;
  padding: 5px;
  background-color: #007BFF;
  color: #FFFFFF;
}
.btn .button-style-huodong::after {
  border: none;
}
